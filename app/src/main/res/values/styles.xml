<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">#ffffff</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>



    <style name="NoteChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipCornerRadius">2dp</item>
        <item name="chipMinHeight">20dp</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="android:ellipsize">end</item>
        <item name="rippleColor">@null</item>
        <item name="android:clickable">false</item>
        <item name="chipStartPadding">0dp</item>
        <item name="chipEndPadding">2dp</item>
    </style>

    <style name="NoteDetailChip" parent="Widget.MaterialComponents.Chip.Action">

    </style>



</resources>
